# Default values (minimum viable configuration)
# Not recommended for production use
control_cpu = 2     # vCPU for control plane nodes
control_mem = 2048  # MB RAM for control plane nodes (2 GB)
control_disk = 100  # GB for control plane nodes

worker_cpu = 4      # vCPU for worker nodes
worker_mem = 4096   # MB RAM for worker nodes (4 GB)
worker_disk = 250   # GB for worker nodes

